 *  Created on: 24 Aug 2020
 *      Author: Heba_Tharwat
 */

#include <avr/io.h>
#include <avr/interrupt.h>
#define NUMBER_OF_OVERFLOWS_PER_SECOND 4

unsigned char TICK = 0, sec = 0, min = 0, hour = 0;

void inter(void){

	GICR |=(1<<INT0) | (1<<INT1) | (1<<INT2);
	MCUCR |=(1<<ISC11) | (1<<ISC10) | (1<<ISC01);

}

void TIMER1_CTC(void) {
	TCCR1A = (1 << FOC1A) | (1 << COM1A1) ;
	TCCR1B = (1 << CS10) | (1 << CS12) | (WGM12);
	TCNT1 = 0;
	OCR1A = 250;
	TIMSK = (1 << OCIE1A);

}

ISR (TIMER1_COMPA_vect) {
	++TICK;

	if (TICK == NUMBER_OF_OVERFLOWS_PER_SECOND) {
		TICK = 0;
		++sec;

		if (sec == 60) {
			sec = 0;
			++min;
			if (min == 60) {
				min = 0;
				++hour;
			}
		}

		TICK = 0;
	}
}


ISR(INT0_vect){
	//reset/start

	sec = 0, min = 0, hour = 0;

				if ((PORTA & 0x03) != 60) {

					//sec++;
					PORTA = (PORTA & 0xFC) | (sec & 0x03);
				}

				else {

					if ((PORTA & 0x0C) != 60) {
						//min++;
						//if(TICK==1)
						PORTA = (PORTA & 0xF3) | (min & 0x0C);
					}

					else {

						//hour++;
						//if(TICK==1)
						PORTA = (PORTA & 0xCF) | (min & 0x30);
					}

				}
}




ISR(INT1_vect){
	 //pause
	TIFR |= (1 << OCF1A);

}

ISR(INT2_vect){
	//resume

	if ((PORTA & 0x03) != 60) {

					//sec++;
					PORTA = (PORTA & 0xFC) | (sec & 0x03);
				}

				else {

					if ((PORTA & 0x0C) != 60) {
						//min++;
						//if(TICK==1)
						PORTA = (PORTA & 0xF3) | (min & 0x0C);
					}

					else {

						//hour++;
						//if(TICK==1)
						PORTA = (PORTA & 0xCF) | (min & 0x30);
					}

				}


}




int main() {
	DDRD &= (1 << PD2);
	DDRD &= (1 << PD3);
	DDRB &= (1 << PB2);
	DDRC |= 0x0F;

	PORTD |= (1 << PD2);
	PORTB |= (1 << PB2);
	PORTC |= 0x0F;


	DDRA |= 0x3F;
	//PORTA &=0xC0;
	PORTA |=0x01;

	SREG = (1 << 7);
    inter();
	TIMER1_CTC();

	while (1) {



	}

}
